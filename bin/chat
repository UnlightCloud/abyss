require 'bundler'

$LOAD_PATH.unshift Bundler.root.join('lib')
$LOAD_PATH.unshift Bundler.root.join('src')

require 'bootstrap'
require 'protocol/chatserver'

# TODO: Replace with Dawn::Server.name
$SERVER_NAME = "CHAT_SERVER_#{Dawn::Server.port}"

module Unlight
  include Protocol

  Dawn::Bootstrap.new(ChatServer).start do
    EM::PeriodicTimer.new(60) do
      ChatServer.check_connection
    rescue StandardError => e
      Dawn.logger.fatal('Check connection failed', e)
    end
  end
end
